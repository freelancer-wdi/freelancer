 <%= render  'projects/navbar_users/navbar_users' %>

 <div class="col-md-12 heading-section"  style="width: 80%; position: relative; left: 20%;" >	
      <p id="notice"><%= notice %></p> 

    <%= form_with(model: offer, local: true) do |form| %>
      <% if offer.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(offer.errors.count, "error") %> prohibited this offer from being saved:</h2>

          <ul>
