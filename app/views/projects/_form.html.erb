                      <%= form.label :requirements %>
                      <%= form.text_area :requirements, class:"form-control md-textarea" %>
                    </div>
                    <br/>

                    <div class="md-form">
                      <%= form.label :description %>
                      <%= form.text_area :description, class:"form-control md-textarea" %>
