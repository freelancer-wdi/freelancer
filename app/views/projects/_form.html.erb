                      <div class=" col-sm-8">
                        <%= form.label :name%>
                        
                        <%= form.text_field :name, id:"materialContactFormName", class:"form-control" %>
                      </div>

                      <div class=" col-sm-4">
                        <%= form.label :budget %>
                        <%= form.text_field :budget , class:"form-control"%>
                      </div>

                    </div>
